- @title = 'Search ChiliProject Plugins'
- @h1 = ''
- @selected = :search

- content_for :head do
  - if results?
    %h1= "#{@plugins.size} of #{pluralize(@plugins.total_entries, "result")} for &#8220;#{@query}&#8221;"
  - else
    %h1= @title
  - form_tag "/search", :method => "get", :id => "search" do
    %p
      %label{:for=>"q"} Search
      %input.search{:name=>"q", :id=>"q", :type=>"text", :value=>@query}/

- if results?
  - if @plugins.total_entries > 0
    %table.index#plugins{:style => "clear: both"}
      %tbody
        = render :partial => "plugin", :collection => @plugins
    = pagination_for @plugins

  - content_for :sidebar do
    - for key, title in facet_order 
      - if @facets.key?(key)
        - values = @facets[key]
        %h2= title
        %table{:style => "width:100%"}
          %colgroup
            %col{:width=>40}
            %col
          - if request.params[key]
            %tr
              %td= link_to "X", request.params.merge({ key=>nil, :page=>1}), :rel=>:nofollow
              %td= request.params[key]
          - else
            - for vkey, count in values.sort{|a, b| h(a[0])<=>h(b[0]) }
              %tr
                %td= count
                - if vkey.blank?
                  %td
                    %em undefined
                - else
                  %td= link_to h(vkey), request.params.merge({ key=>vkey, :page=>1}), :rel=>:nofollow

- else
  %p Search ChiliProject plugins by name or description, author name or company.